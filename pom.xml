    <build>
        <outputDirectory>../beam/modules/${artifactId}-${version}</outputDirectory>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <debug>true</debug>
                    <encoding>ISO-8859-1</encoding>
			  <optimize>true</optimize>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-1</version>
                <configuration>
			  <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>src/main/assembly/src.xml</descriptor>
                        <descriptor>src/main/assembly/bin.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skip>false</skip>
			  <format>xml</format>
                    <printSummary>true</printSummary>
                    <excludes>
                        <exclude>**/TestRaster.java</exclude>
                        <exclude>**/TestHelper$1.java</exclude>
                    </excludes>
                    <systemProperties>
                        <!--<property>
                            <name>beam.home</name>
                            <value>.</value>
                        </property>-->
                        <property>
                            <name>org.esa.beam.testdata.out</name>
                            <value>target/test-data</value>
                        </property>
                    </systemProperties>
                    <argLine>-Xmx512M -enableassertions</argLine>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-idea-plugin</artifactId>
                <configuration>
                    <downloadSources>true</downloadSources>
                    <downloadJavadocs>true</downloadJavadocs>
                    <jdkName>1.6</jdkName>
                    <jdkLevel>1.5</jdkLevel>
                    <exclude>target</exclude>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.bc.maven.plugins</groupId>
                <artifactId>maven-template-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>template</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <templates>
                        <template>
                            <source>src/main/bin/win/beam-cli-template.bat</source>
                            <lineEnding>dos</lineEnding>
                            <outputDirectory>target/${artifactId}-${version}-bin.dir/bin</outputDirectory>
                            <outputFileNamePattern>@{filterBaseName}.@{sourceExtension}</outputFileNamePattern>
                            <filterSet>
                                <directory>src/main/filters</directory>
                                <includes>
                                    <include>*.properties</include>
                                </includes>
                            </filterSet>
                        </template>
                        <template>
                            <source>src/main/bin/linux/beam-cli-template.sh</source>
                            <lineEnding>unix</lineEnding>
                            <outputDirectory>target/${artifactId}-${version}-bin.dir/bin</outputDirectory>
                            <outputFileNamePattern>@{filterBaseName}.@{sourceExtension}</outputFileNamePattern>
                            <filterSet>
                                <directory>src/main/filters</directory>
                                <includes>
                                    <include>*.properties</include>
                                </includes>
                            </filterSet>
                        </template>
                        <template>
                            <source>src/main/bin/macosx/beam-cli-template.command</source>
                            <lineEnding>unix</lineEnding>
                            <outputDirectory>target/${artifactId}-${version}-bin.dir/bin</outputDirectory>
                            <outputFileNamePattern>@{filterBaseName}.@{sourceExtension}</outputFileNamePattern>
                            <filterSet>
                                <directory>src/main/filters</directory>
                                <includes>
                                    <include>*.properties</include>
                                </includes>
                            </filterSet>
                        </template>
                    </templates>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <destDir>../target/site/apidocs/${artifactId}-${version}/apidoc</destDir>
                    <!-- Creates an HTML version of each source file and adds links documentation -->
                    <linksource>true</linksource>
                    <excludePackageNames>
                        *.internal;org.esa.beam.visat.toolviews.*;org.esa.beam.visat.actions.*;org.esa.beam.visat.plugins.*;org.esa.beam.visat.dialogs.*;org.esa.beam.examples.*;org.esa.beam.dataio.*;org.esa.beam.processor.*;com.bc.beam.processor.*;org.esa.beam.pconvert
                    </excludePackageNames>
                    <!-- Shuts off non-error and non-warning messages-->
                    <quiet>true</quiet>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

