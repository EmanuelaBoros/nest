<project>
    <shortName>NEST</shortName>
    <fullName>Next ESA SAR Toolbox</fullName>
    <version>2C</version>
    <licenseFile>LICENSE.txt</licenseFile>
    <postInstallationActionList>
        <associateWindowsFileExtension>
            <extensions>N1 E1 E2</extensions>
            <friendlyName>Envisat</friendlyName>
            <icon>C:\build\nest\src\main\assembly\dat.ico</icon>
            <mimeType></mimeType>
            <progID></progID>
            <scope>user</scope>
        </associateWindowsFileExtension>
    </postInstallationActionList>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>../dist</outputDirectory>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>ESA</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Text that will appear on Tooltip</comment>
                    <exec>nest_dat.sh</exec>
                    <icon></icon>
                    <name>NEST 2C</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>nest_dat.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-linux.dir</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../dist/jre</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/auxdata</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/bin</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/commandline</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/config</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/graphs</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/images</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/lib</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/licenses</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/modules</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-win.dir/res</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/VERSION.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/CHANGELOG.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/cli.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/clib_jiio.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/clib_jiio_sse2.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/clib_jiio_util.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/dat.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/gluegen-rt.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/gpt.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/jogl.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/jogl_awt.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/jogl_cg.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/LICENSE.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/mlib_jai.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/mlib_jai_mmx.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/mlib_jai_util.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/nest-dat.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/post-uninstall.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>target/nest-2C-bin-win.dir/readme.html</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>target/nest-2C-bin-mac.dir</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Next ESA SAR Toolbox</comment>
                    <name>NEST 2C</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>nest_dat.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
        <component>
            <name>newcomponent</name>
            <description>New Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>windows</platform>
        </platformOptions>
    </platformOptionsList>
</project>

