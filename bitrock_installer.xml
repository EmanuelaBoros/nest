<project>
    <shortName>NEST</shortName>
    <fullName>Next ESA SAR Toolbox</fullName>
    <version>3C</version>
    <installerFilename></installerFilename>
    <licenseFile>LICENSE.txt</licenseFile>
    <splashImage>beam/res/NEST_Splash.png</splashImage>
    <postInstallationActionList>
        <associateWindowsFileExtension>
            <extensions>N1 E1 E2</extensions>
            <friendlyName>Envisat</friendlyName>
            <icon>C:\build\nest\src\main\assembly\dat.ico</icon>
            <mimeType></mimeType>
            <progID></progID>
            <scope>user</scope>
        </associateWindowsFileExtension>
        <addEnvironmentVariable>
            <name>NEST_HOME</name>
            <scope>user</scope>
            <value>${installdir}</value>
        </addEnvironmentVariable>
        <changePermissions>
            <files>*/*.sh;*/*.bin;*/*.command;${InstallDir}/*.command;${InstallDir}/dat.sh;${InstallDir}/gpt.sh;${InstallDir}/jre/bin/*;${InstallDir}/*.so;${InstallDir}/*.jnilib</files>
            <permissions>755</permissions>
        </changePermissions>
        <addDirectoryToPath>
            <insertAt>end</insertAt>
            <path>${installdir}</path>
            <scope>user</scope>
        </addDirectoryToPath>
        <createSymLink>
            <linkName>~/Desktop/NEST_DAT</linkName>
            <target>${installdir}/dat.command ${installdir}</target>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </createSymLink>
    </postInstallationActionList>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>../dist</outputDirectory>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>ESA</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>NEST Display and Analysis Tool</comment>
                    <exec>${installdir}/dat.sh</exec>
                    <icon>${installdir}/res/dat.png</icon>
                    <name>NEST 3C</name>
                    <path>.</path>
                    <platforms>all</platforms>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/nest-dat.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
