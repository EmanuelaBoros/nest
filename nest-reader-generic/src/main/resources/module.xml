<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>nest-reader-generic</symbolicName>
    <version>2A</version>
    <name>NEST Generic Binary Product Reader</name>

    <description>
        Reads generic binary products.
    </description>

    <dependency>
        <module>beam-core</module>
    </dependency>
    <dependency>
        <module>nest-core</module>
    </dependency>
    <dependency>
        <module>beam-envi-reader</module>
    </dependency>

    <categories>Reader</categories>

    <extension point="beam-ui:actions">
        <action>
            <id>importImageIO</id>
            <class>org.esa.beam.visat.actions.ProductImportAction</class>
            <formatName>ImageIO</formatName>
            <readerPlugin>org.esa.nest.dataio.ImageIOReaderPlugIn</readerPlugin>
            <useAllFileFilter>true</useAllFileFilter>
            <shortDescr>Import an ImageIO supported file format</shortDescr>
            <description>Import an ImageIO supported file format</description>
            <largeIcon>icons/Import24.gif</largeIcon>
            <helpId>importImageIO</helpId>
        </action>
        <action>
            <text>Import ENVI Product</text>
            <class>org.esa.beam.visat.actions.ProductImportAction</class>
            <formatName>ENVI</formatName>
            <useAllFileFilter>true</useAllFileFilter>
            <shortDescr>Import an ENVI data product.</shortDescr>
        </action>
        <action>
            <text>Import Generic Binary</text>
            <class>org.esa.beam.visat.actions.ProductImportAction</class>
            <formatName>Generic Binary</formatName>
            <useAllFileFilter>true</useAllFileFilter>
            <shortDescr>Import Generic Binary</shortDescr>
        </action>
    </extension>

</module>