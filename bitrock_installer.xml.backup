    <postInstallationActionList>
        <associateWindowsFileExtension>
            <extensions>N1 E1 E2</extensions>
            <friendlyName>Envisat</friendlyName>
            <icon>C:\build\4C\nest\nest\nest-src\main\assembly\dat.ico</icon>
            <mimeType></mimeType>
            <progID></progID>
            <scope>user</scope>
        </associateWindowsFileExtension>
        <addEnvironmentVariable>
            <name>NEST_HOME</name>
            <scope>user</scope>
            <value>${installdir}</value>
        </addEnvironmentVariable>
        <changePermissions>
            <files>*/*.sh;*/*.bin;*/*.command;${installdir}/*.command;${installdir}/dat.sh;${installdir}/gpt.sh;${installdir}/jre/bin/*;${installdir}/*.so;${installdir}/*.jnilib</files>
            <permissions>755</permissions>
        </changePermissions>
        <addDirectoryToPath>
            <insertAt>end</insertAt>
            <path>${installdir}</path>
            <scope>user</scope>
        </addDirectoryToPath>
        <createSymLink>
            <linkName>~/Desktop/NEST_DAT</linkName>
            <target>${installdir}/dat.command</target>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </createSymLink>
        <substitute>
            <files>${installdir}/dat.command</files>
            <type>regexp</type>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_DIR@@</pattern>
                    <value>${installdir}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <substitute>
            <files>${installdir}/gpt.command</files>
            <type>regexp</type>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
            <substitutionList>
                <substitution>
                    <pattern>@@INSTALL_DIR@@</pattern>
                    <value>${installdir}</value>
                </substitution>
            </substitutionList>
        </substitute>
        <deleteFile>
            <abortOnError>0</abortOnError>
            <path>"%USERPROFILE%\.nest"</path>
            <show>0</show>
            <showMessageOnError>0</showMessageOnError>
        </deleteFile>
        <setEnvironmentVariable>
            <name>NEST_HOME</name>
            <value>${installdir}</value>
        </setEnvironmentVariable>
    </postInstallationActionList>
    <postUninstallationActionList>
