<graph id="Graph">
  <version>1.0</version>
  <node id="1-Read">
    <operator>Read</operator>
    <sources/>
    <parameters class="com.bc.ceres.binding.dom.Xpp3DomElement"/>
  </node>
  <node id="2-RemoveAntennaPattern">
    <operator>RemoveAntennaPattern</operator>
    <sources>
      <sourceProduct refid="1-Read"/>
    </sources>
    <parameters class="com.bc.ceres.binding.dom.Xpp3DomElement">
      <sourceBands/>
    </parameters>
  </node>
  <node id="3-Multilook">
    <operator>Multilook</operator>
    <sources>
      <sourceProduct refid="2-RemoveAntennaPattern"/>
    </sources>
    <parameters class="com.bc.ceres.binding.dom.Xpp3DomElement">
      <sourceBands/>
      <nRgLooks>1</nRgLooks>
      <nAzLooks>1</nAzLooks>
      <note>Currently, detection for complex data is performed without any resampling</note>
    </parameters>
  </node>
  <node id="4-Terrain-Correction">
    <operator>Terrain-Correction</operator>
    <sources>
      <sourceProduct refid="3-Multilook"/>
    </sources>
    <parameters class="com.bc.ceres.binding.dom.Xpp3DomElement">
      <sourceBands/>
      <demName>SRTM 3Sec GeoTiff</demName>
      <externalDEMFile/>
      <externalDEMNoDataValue>0.0</externalDEMNoDataValue>
      <demResamplingMethod>BILINEAR_INTERPOLATION</demResamplingMethod>
      <imgResamplingMethod>BILINEAR_INTERPOLATION</imgResamplingMethod>
      <pixelSpacing>0.0</pixelSpacing>
      <projectionName>Geographic Lat/Lon</projectionName>
      <saveDEM>false</saveDEM>
      <saveLocalIncidenceAngle>false</saveLocalIncidenceAngle>
      <saveProjectedLocalIncidenceAngle>false</saveProjectedLocalIncidenceAngle>
      <saveSelectedSourceBand>false</saveSelectedSourceBand>
      <applyRadiometricNormalization>true</applyRadiometricNormalization>
      <saveSigmaNought>true</saveSigmaNought>
      <saveGammaNought>false</saveGammaNought>
      <saveBetaNought>false</saveBetaNought>
      <incidenceAngleForSigma0>Use projected local incidence angle from DEM</incidenceAngleForSigma0>
      <incidenceAngleForGamma0>Use projected local incidence angle from DEM</incidenceAngleForGamma0>
    </parameters>
  </node>
  <node id="5-Write">
    <operator>Write</operator>
    <sources>
      <sourceProduct refid="4-Terrain-Correction"/>
    </sources>
    <parameters class="com.bc.ceres.binding.dom.Xpp3DomElement">
      <formatName>BEAM-DIMAP</formatName>
      <file>RemoveAntPat_Multilook_Orthorectify.dim</file>
    </parameters>
  </node>
  <applicationData id="Presentation">
    <Description>Remove Antenna Pattern, Multilook and Terrain Correct</Description>
    <node id="1-Read">
      <displayPosition y="88.0" x="15.0"/>
    </node>
    <node id="2-RemoveAntennaPattern">
      <displayPosition y="88.0" x="111.0"/>
    </node>
    <node id="3-Multilook">
      <displayPosition y="150.0" x="147.0"/>
    </node>
    <node id="4-Terrain-Correction">
      <displayPosition y="150.0" x="294.0"/>
    </node>
    <node id="5-Write">
      <displayPosition y="150.0" x="471.0"/>
    </node>
  </applicationData>
</graph>