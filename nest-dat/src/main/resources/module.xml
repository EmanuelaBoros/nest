<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>nest-dat</symbolicName>
    <version>1B</version>
    <name>NEST Display and Analysis Tool</name>

    <description>NEST Display and Analysis Tool</description>

    <vendor>Array Systems Computing Inc</vendor>
    <contactAddress>1120 Finch Ave W. Toronto (Canada)</contactAddress>
    <copyright>(C) 2007 by Array Systems Computing Inc</copyright>
    <url>http://www.array.ca/nest</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <dependency>
        <module>beam-visat-rcp</module>
    </dependency>
	<dependency>
        <module>beam-gpf</module>
    </dependency>
    <dependency>
        <module>beam-core</module>
    </dependency>
    <dependency>
        <module>nest-core</module>
    </dependency>
    
    <categories>Application,DAT</categories>

    <extension point="ceres-core:applications">
        <application id="DatMain" class="org.esa.nest.dat.DatMain"/>
    </extension>

    <extension point="beam-ui:applicationDescriptors">
            <applicationDescriptor>
                <applicationId>DatMain</applicationId>
                <displayName>DAT</displayName>
                <frameIcon>/org/esa/nest/dat/images/frame-icon.png</frameIcon>
                <image>/org/esa/nest/dat/images/about.jpg</image>
                <excludedActions>
                    <id>openGeoCodingInfoDialog</id>
                    <id>openStatisticsDialog</id>
                    <id>openHistogramDialog</id>
                    <id>openScatterPlotDialog</id>
                    <id>openProfilePlotDialog</id>
                    <id>openCoordListDialog</id>
                    <id>orthorectification</id>
                    <id>showDataSources</id>
                    <id>showUpdateDialog</id>
                    <id>new</id>
                    <id>reopen</id>
                    <id>createAsarNrcsBands</id>
                </excludedActions>
                <excludedToolViews>
                    <id>org.esa.beam.visat.toolviews.spectrum.SpectrumToolView</id>
                    <id>org.esa.beam.visat.toolviews.stat.StatisticsToolView</id>
                    <id>org.esa.beam.scripting.visat.ScriptConsoleToolView</id>
                    <id>org.esa.beam.visat.diag.JaiMonitorToolView</id>
                </excludedToolViews>
            </applicationDescriptor>
    </extension>


    <extension point="beam-ui:toolViews">
        <toolView>
            <id>org.esa.nest.dat.toolviews.DatStatisticsToolView</id>
            <class>org.esa.nest.dat.toolviews.DatStatisticsToolView</class>
            <title>Statistics View</title>
            <tabTitle>Statistics</tabTitle>
            <mnemonic>t</mnemonic>
            <accelerator>ctrl alt T</accelerator>
            <description>Display statistics for a selected band.</description>
            <smallIcon>/org/esa/beam/resources/images/icons/Information16.gif</smallIcon>
            <largeIcon>/org/esa/beam/resources/images/icons/Information24.gif</largeIcon>
            <helpId>statisticsToolView</helpId>
            <initState>HIDDEN</initState>
            <initSide>SOUTH</initSide>
            <initIndex>0</initIndex>
        </toolView>
        <toolView>
            <id>org.esa.nest.dat.toolviews.Projects.ProjectsToolView</id>
            <class>org.esa.nest.dat.toolviews.Projects.ProjectsToolView</class>
            <title>Projects</title>
            <tabTitle>Projects</tabTitle>
            <mnemonic>P</mnemonic>
            <accelerator>ctrl alt P</accelerator>
            <smallIcon>/org/esa/beam/resources/images/icons/Open16.gif</smallIcon>
            <largeIcon>/org/esa/beam/resources/images/icons/Open24.gif</largeIcon>
            <!--<helpId>TODO</helpId>-->
            <description>Project View.</description>
            <initState>DOCKED</initState>
            <initSide>WEST</initSide>
            <initIndex>0</initIndex>
        </toolView>
    </extension>

    <extension point="beam-ui:actions">

      <action>
            <id>newProject</id>
            <class>org.esa.nest.dat.actions.NewProjectAction</class>
            <parent>file</parent>
            <text>New Project...</text>
            <accelerator>control P</accelerator>
            <separatorBefore>true</separatorBefore>
            <placeBefore>loadProject</placeBefore>
            <shortDescr>Create a new project</shortDescr>
            <description>Create a new project</description>
            <smallIcon>icons/Open16.gif</smallIcon>
            <largeIcon>icons/Open24.gif</largeIcon>
            <helpId>newProject</helpId>
      </action>

      <action>
            <id>loadProject</id>
            <class>org.esa.nest.dat.actions.LoadProjectAction</class>
            <parent>file</parent>
            <text>Load Project...</text>
            <accelerator>control O</accelerator>
            <placeBefore>openProductGrabber</placeBefore>
            <shortDescr>Load a project</shortDescr>
            <description>Load a project</description>
            <smallIcon>icons/Open16.gif</smallIcon>
            <largeIcon>icons/Open24.gif</largeIcon>
            <helpId>loadProject</helpId>
      </action>

        <action>
            <id>openInformationDialog</id>
            <class>org.esa.nest.dat.actions.OpenInformationDialogAction</class>
            <placeBefore>openGeoCodingInfoDialog</placeBefore>
            <parent>data</parent>
            <text>Information...</text>
            <mnemonic>I</mnemonic>
            <separatorBefore>true</separatorBefore>
            <shortDescr>Open product information dialog.</shortDescr>
            <description>Open product information dialog.</description>
            <context>product,band,tiePointGrid</context>
            <smallIcon>icons/Information16.gif</smallIcon>
            <largeIcon>icons/Information24.gif</largeIcon>
            <helpId>informationDialog</helpId>
        </action>

        <action>
            <id>showHomePage</id>
            <parent>help</parent>
            <class>org.esa.nest.dat.actions.ShowHomePageAction</class>
            <text>NEST Home Page</text>
            <mnemonic>B</mnemonic>
            <shortDescr>Opens the NEST home page.</shortDescr>
            <description>Opens the NEST home page with the default web browser.</description>
            <helpId>helpTopics</helpId>
            <placeAfter>helpTopics</placeAfter>
        </action>

        <action>
            <id>about</id>
            <parent>help</parent>
            <class>org.esa.beam.visat.actions.AboutAction</class>
            <text>About DAT</text>
            <mnemonic>A</mnemonic>
            <accelerator>ctrl alt A</accelerator>
            <shortDescr>Displays information about NEST DAT.</shortDescr>
            <description>Displays information about NEST DAT.</description>
            <smallIcon>icons/About16.gif</smallIcon>
            <largeIcon>icons/About24.gif</largeIcon>
            <helpId>about</helpId>
            <placeAfter>showUpdateDialog</placeAfter>
            <separatorBefore>true</separatorBefore>
        </action>

    </extension>


</module>