<module>
    <manifestVersion>1.0.0</manifestVersion>
    <symbolicName>nest-reader-ers-ceos</symbolicName>
    <version>1.0</version>
    <name>ERS 1 and 2 CEOS Product Reader</name>

    <description>
        Enables BEAM to read ERS data products in CEOS format.
    </description>

    <vendor>Brockmann Consult GmbH</vendor>
    <contactAddress>Max Planck Str.2, 21502 Geesthacht (Germany)</contactAddress>
    <copyright>(C) 2007 by Brockmann Consult GmbH</copyright>
    <url>http://envisat.esa.int/beam</url>
    <licenseUrl>http://www.gnu.org/licenses/gpl.html</licenseUrl>

    <dependency>
        <module>beam-core</module>
    </dependency>
    <dependency>
        <module>beam-visat</module>
        <optional>true</optional>
    </dependency>

    <categories>Reader,ERS</categories>

    <extension point="nest-dat:actions">
        <action>
            <id>importERSCEOSProduct</id>
            <class>org.esa.beam.visat.actions.ProductImportAction</class>
            <formatName>ERS</formatName>
            <useAllFileFilter>true</useAllFileFilter>
            <mnemonic>R</mnemonic>
            <shortDescr>Import an ERS CEOS data product or product subset.</shortDescr>
            <description>Import an ERS CEOS data product or product subset.</description>
            <largeIcon>icons/Import24.gif</largeIcon>
            <helpId>importPalsarProduct</helpId>
            <placeAfter>importNetcdfProduct</placeAfter>
        </action>
    </extension>

</module>